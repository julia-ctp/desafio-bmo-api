generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Employee {
  id String @id @default(cuid())
  name String 
  lastName String 
  cpf String @unique
  password String
  createdAt DateTime @default(now())

  notices Notice[]
}

model Notice {
  id String @id @default(cuid())
  employeeId String
  type NoticeType @default(nenhum)
  content String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  employee Employee @relation(fields: [employeeId], references: [id], onDelete: Cascade)
}

enum NoticeType {
  importante
  informativo
  nenhum
}

model Contact {
  id String @id @default(cuid())
  name String
  email String
  phone String 
  message String
  createdAt DateTime @default(now())
}
